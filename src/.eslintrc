{
  "extends": ["wesbos"],
  "parserOptions": { "sourceType": "module" },

  "rules": {
    "react/prop-types": 0,
    "react/destructuring-assignment": 0,
    "react-hooks/exhaustive-deps": 0,
    "no-restricted-syntax": 0,
    "no-prototype-builtins": 0,
    "no-plusplus": 0,
    "guard-for-in": 0,
    "no-param-reassign": 0,
    "no-nested-ternary": 0,

    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "doubleQuote": true,
        "printWidth": 120,
        "tabWidth": 4
      }
    ]
  }
}
